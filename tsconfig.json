{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@mag-system/core": ["packages/core/src"],
      "@mag-system/database": ["packages/database/src"]
    },
    "isolatedModules": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}
