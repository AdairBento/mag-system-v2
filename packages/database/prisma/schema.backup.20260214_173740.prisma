generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USERS & AUTH
// ============================================

model User {
  id           String     @id @default(uuid()) @db.Uuid
  email        String     @unique @db.VarChar(320)
  passwordHash String     @map("password_hash")
  name         String
  role         UserRole   @default(OPERATOR)
  status       UserStatus @default(ACTIVE)

  failedLoginAttempts Int       @default(0) @map("failed_login_attempts")
  lockedUntil         DateTime? @map("locked_until")
  lastLoginAt         DateTime? @map("last_login_at")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  sessions         Session[]
  auditLogs        AuditLog[]
  createdRentals   Rental[]   @relation("RentalCreatedBy")
  updatedRentals   Rental[]   @relation("RentalUpdatedBy")
  createdInvoices  Invoice[]  @relation("InvoiceCreatedBy")
  updatedInvoices  Invoice[]  @relation("InvoiceUpdatedBy")
  createdContracts Contract[] @relation("ContractCreatedBy")
  updatedContracts Contract[] @relation("ContractUpdatedBy")

  @@index([email])
  @@index([role])
  @@index([status])
  @@index([deletedAt])
  @@map("users")
}

enum UserRole {
  ADMIN
  MANAGER
  OPERATOR
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  refreshToken String   @unique @map("refresh_token")
  ipAddress    String?  @map("ip_address")
  userAgent    String?  @map("user_agent")
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model AuditLog {
  id         String   @id @default(uuid()) @db.Uuid
  userId     String?  @map("user_id") @db.Uuid
  action     String
  resource   String
  resourceId String?  @map("resource_id") @db.Uuid
  metadata   Json?
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")
  createdAt  DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================
// CLIENTS
// ============================================

model Client {
  id           String       @id @default(uuid()) @db.Uuid
  name         String
  email        String?      @db.VarChar(320)
  phone        String       @db.VarChar(20)
  document     String       @db.VarChar(14)
  documentType DocumentType
  address      String?
  city         String?
  state        String?
  zipCode      String?      @map("zip_code")
  status       ClientStatus @default(ACTIVE)
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  deletedAt    DateTime?    @map("deleted_at")

  rentals  Rental[]
  invoices Invoice[]
  drivers  Driver[]

  @@index([document])
  @@index([status])
  @@index([documentType])
  @@index([email])
  @@index([deletedAt])
  @@map("clients")
}

enum DocumentType {
  CPF
  CNPJ
}

enum ClientStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

// ============================================
// DRIVERS
// ============================================

model Driver {
  id               String          @id @default(uuid()) @db.Uuid
  clientId         String?         @map("client_id") @db.Uuid
  name             String
  email            String?         @db.VarChar(320)
  phone            String          @db.VarChar(20)
  document         String          @unique @db.VarChar(14)
  licenseNumber    String          @map("license_number") @db.VarChar(20)
  licenseCategory  LicenseCategory @map("license_category")
  licenseExpiresAt DateTime        @map("license_expires_at")
  address          String?
  city             String?
  state            String?
  zipCode          String?         @map("zip_code")
  status           DriverStatus    @default(ACTIVE)
  createdAt        DateTime        @default(now()) @map("created_at")
  updatedAt        DateTime        @updatedAt @map("updated_at")
  deletedAt        DateTime?       @map("deleted_at")

  client  Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)
  rentals Rental[]
  fines   Fine[]

  @@index([clientId])
  @@index([document])
  @@index([licenseNumber])
  @@index([status])
  @@index([licenseExpiresAt])
  @@index([email])
  @@index([deletedAt])
  @@map("drivers")
}

enum LicenseCategory {
  A
  B
  AB
  C
  D
  E
  AC
  AD
  AE
}

enum DriverStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

// ============================================
// VEHICLES
// ============================================

model Vehicle {
  id                 String           @id @default(uuid()) @db.Uuid
  plate              String           @db.VarChar(10)
  brand              String
  model              String
  year               Int              @db.SmallInt
  color              String
  registrationNumber String           @map("registration_number") @db.VarChar(20)
  chassis            String           @db.VarChar(20)
  dailyRate          Decimal          @map("daily_rate") @db.Decimal(10, 2)
  mileage            Int              @default(0)
  fuelType           FuelType         @map("fuel_type")
  transmission       TransmissionType
  category           VehicleCategory
  capacity           Int              @default(5)
  status             VehicleStatus    @default(AVAILABLE)
  createdAt          DateTime         @default(now()) @map("created_at")
  updatedAt          DateTime         @updatedAt @map("updated_at")
  deletedAt          DateTime?        @map("deleted_at")

  rentals      Rental[]
  maintenances Maintenance[]
  inspections  Inspection[]
  insurances   Insurance[]
  fines        Fine[]
  accidents    Accident[]

  @@index([plate])
  @@index([registrationNumber])
  @@index([chassis])
  @@index([status])
  @@index([category])
  @@index([brand, model])
  @@index([deletedAt])
  @@map("vehicles")
}

enum FuelType {
  GASOLINE
  ETHANOL
  DIESEL
  FLEX
  ELECTRIC
  HYBRID
}

enum TransmissionType {
  MANUAL
  AUTOMATIC
}

enum VehicleCategory {
  COMPACT
  SEDAN
  SUV
  PICKUP
  VAN
  LUXURY
}

enum VehicleStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
  INACTIVE
}

// ============================================
// RENTALS
// ============================================

model Rental {
  id        String @id @default(uuid()) @db.Uuid
  clientId  String @map("client_id") @db.Uuid
  driverId  String @map("driver_id") @db.Uuid
  vehicleId String @map("vehicle_id") @db.Uuid

  startDate       DateTime  @map("start_date")
  expectedEndDate DateTime  @map("expected_end_date")
  returnedAt      DateTime? @map("returned_at")

  dailyRate   Decimal @map("daily_rate") @db.Decimal(10, 2)
  totalDays   Int     @map("total_days")
  totalAmount Decimal @map("total_amount") @db.Decimal(10, 2)
  deposit     Decimal @default(0) @db.Decimal(10, 2)
  discount    Decimal @default(0) @db.Decimal(10, 2)

  status RentalStatus @default(PENDING)
  notes  String?

  finalizedAt DateTime? @map("finalized_at")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  createdByUserId String? @map("created_by_user_id") @db.Uuid
  updatedByUserId String? @map("updated_by_user_id") @db.Uuid

  client    Client  @relation(fields: [clientId], references: [id], onDelete: Restrict)
  driver    Driver  @relation(fields: [driverId], references: [id], onDelete: Restrict)
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Restrict)
  createdBy User?   @relation("RentalCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)
  updatedBy User?   @relation("RentalUpdatedBy", fields: [updatedByUserId], references: [id], onDelete: SetNull)

  inspections Inspection[]
  contract    Contract?
  invoices    Invoice[]

  @@index([clientId])
  @@index([driverId])
  @@index([vehicleId])
  @@index([status])
  @@index([startDate])
  @@index([expectedEndDate])
  @@index([returnedAt])
  @@index([deletedAt])
  @@index([createdByUserId])
  @@index([updatedByUserId])
  @@map("rentals")
}

enum RentalStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}

// ============================================
// CONTRACTS
// ============================================

model Contract {
  id        String         @id @default(uuid()) @db.Uuid
  rentalId  String         @unique @map("rental_id") @db.Uuid
  fileUrl   String         @map("file_url")
  signedAt  DateTime?      @map("signed_at")
  signedBy  String?        @map("signed_by")
  status    ContractStatus @default(PENDING)
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @updatedAt @map("updated_at")
  deletedAt DateTime?      @map("deleted_at")

  createdByUserId String? @map("created_by_user_id") @db.Uuid
  updatedByUserId String? @map("updated_by_user_id") @db.Uuid

  rental    Rental @relation(fields: [rentalId], references: [id], onDelete: Restrict)
  createdBy User?  @relation("ContractCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)
  updatedBy User?  @relation("ContractUpdatedBy", fields: [updatedByUserId], references: [id], onDelete: SetNull)

  @@index([rentalId])
  @@index([status])
  @@index([deletedAt])
  @@index([createdByUserId])
  @@index([updatedByUserId])
  @@map("contracts")
}

enum ContractStatus {
  PENDING
  SIGNED
  CANCELLED
}

// ============================================
// INSPECTIONS (VISTORIAS)
// ============================================

model Inspection {
  id        String           @id @default(uuid()) @db.Uuid
  rentalId  String           @map("rental_id") @db.Uuid
  vehicleId String           @map("vehicle_id") @db.Uuid
  type      InspectionType
  mileage   Int
  fuelLevel Int              @map("fuel_level")
  status    InspectionStatus @default(PENDING)
  notes     String?
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  rental  Rental            @relation(fields: [rentalId], references: [id], onDelete: Restrict)
  vehicle Vehicle           @relation(fields: [vehicleId], references: [id], onDelete: Restrict)
  damages Damage[]
  photos  InspectionPhoto[]

  @@unique([rentalId, type])
  @@index([rentalId])
  @@index([vehicleId])
  @@index([status])
  @@map("inspections")
}

enum InspectionType {
  PICKUP
  RETURN
}

enum InspectionStatus {
  PENDING
  COMPLETED
  APPROVED
  REJECTED
}

model Damage {
  id            String         @id @default(uuid()) @db.Uuid
  inspectionId  String         @map("inspection_id") @db.Uuid
  description   String
  severity      DamageSeverity
  location      String
  estimatedCost Decimal?       @map("estimated_cost") @db.Decimal(10, 2)
  createdAt     DateTime       @default(now()) @map("created_at")

  inspection Inspection @relation(fields: [inspectionId], references: [id], onDelete: Cascade)

  @@index([inspectionId])
  @@index([severity])
  @@map("damages")
}

enum DamageSeverity {
  MINOR
  MODERATE
  SEVERE
}

model InspectionPhoto {
  id           String   @id @default(uuid()) @db.Uuid
  inspectionId String   @map("inspection_id") @db.Uuid
  url          String
  description  String?
  createdAt    DateTime @default(now()) @map("created_at")

  inspection Inspection @relation(fields: [inspectionId], references: [id], onDelete: Cascade)

  @@index([inspectionId])
  @@map("inspection_photos")
}

// ============================================
// MAINTENANCE (MANUTENÇÃO)
// ============================================

model Maintenance {
  id            String            @id @default(uuid()) @db.Uuid
  vehicleId     String            @map("vehicle_id") @db.Uuid
  type          MaintenanceType
  description   String
  scheduledDate DateTime          @map("scheduled_date")
  completedDate DateTime?         @map("completed_date")
  cost          Decimal           @db.Decimal(10, 2)
  mileage       Int
  status        MaintenanceStatus @default(SCHEDULED)
  notes         String?
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Restrict)

  @@index([vehicleId])
  @@index([status])
  @@index([scheduledDate])
  @@map("maintenances")
}

enum MaintenanceType {
  PREVENTIVE
  CORRECTIVE
  OIL_CHANGE
  TIRE_CHANGE
  BRAKE_SERVICE
  GENERAL_INSPECTION
  OTHER
}

enum MaintenanceStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// ============================================
// INSURANCE (SEGUROS)
// ============================================

model Insurance {
  id           String          @id @default(uuid()) @db.Uuid
  vehicleId    String          @map("vehicle_id") @db.Uuid
  provider     String
  policyNumber String          @unique @map("policy_number")
  startDate    DateTime        @map("start_date")
  endDate      DateTime        @map("end_date")
  amount       Decimal         @db.Decimal(10, 2)
  coverageType String          @map("coverage_type")
  status       InsuranceStatus @default(ACTIVE)
  createdAt    DateTime        @default(now()) @map("created_at")
  updatedAt    DateTime        @updatedAt @map("updated_at")

  vehicle   Vehicle    @relation(fields: [vehicleId], references: [id], onDelete: Restrict)
  accidents Accident[]

  @@index([vehicleId])
  @@index([status])
  @@index([endDate])
  @@map("insurances")
}

enum InsuranceStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

// ============================================
// ACCIDENTS (SINISTROS)
// ============================================

model Accident {
  id            String           @id @default(uuid()) @db.Uuid
  vehicleId     String           @map("vehicle_id") @db.Uuid
  insuranceId   String?          @map("insurance_id") @db.Uuid
  date          DateTime
  location      String
  description   String
  severity      AccidentSeverity
  estimatedCost Decimal?         @map("estimated_cost") @db.Decimal(10, 2)
  claimNumber   String?          @unique @map("claim_number")
  status        AccidentStatus   @default(REPORTED)
  notes         String?
  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt @map("updated_at")

  vehicle   Vehicle            @relation(fields: [vehicleId], references: [id], onDelete: Restrict)
  insurance Insurance?         @relation(fields: [insuranceId], references: [id], onDelete: SetNull)
  documents AccidentDocument[]

  @@index([vehicleId])
  @@index([insuranceId])
  @@index([status])
  @@index([date])
  @@map("accidents")
}

enum AccidentSeverity {
  MINOR
  MODERATE
  SEVERE
  TOTAL_LOSS
}

enum AccidentStatus {
  REPORTED
  UNDER_REVIEW
  APPROVED
  REJECTED
  SETTLED
}

model AccidentDocument {
  id          String   @id @default(uuid()) @db.Uuid
  accidentId  String   @map("accident_id") @db.Uuid
  type        String
  url         String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  accident Accident @relation(fields: [accidentId], references: [id], onDelete: Cascade)

  @@index([accidentId])
  @@map("accident_documents")
}

// ============================================
// FINES (MULTAS)
// ============================================

model Fine {
  id          String     @id @default(uuid()) @db.Uuid
  vehicleId   String     @map("vehicle_id") @db.Uuid
  driverId    String?    @map("driver_id") @db.Uuid
  date        DateTime
  location    String
  description String
  amount      Decimal    @db.Decimal(10, 2)
  dueDate     DateTime   @map("due_date")
  paidDate    DateTime?  @map("paid_date")
  status      FineStatus @default(PENDING)
  notes       String?
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Restrict)
  driver  Driver? @relation(fields: [driverId], references: [id], onDelete: SetNull)

  @@index([vehicleId])
  @@index([driverId])
  @@index([status])
  @@index([dueDate])
  @@map("fines")
}

enum FineStatus {
  PENDING
  PAID
  OVERDUE
  CONTESTED
}

// ============================================
// FINANCIAL (FINANCEIRO)
// ============================================

model Invoice {
  id            String        @id @default(uuid()) @db.Uuid
  clientId      String        @map("client_id") @db.Uuid
  rentalId      String?       @map("rental_id") @db.Uuid
  invoiceNumber String        @map("invoice_number") @db.VarChar(50)
  amount        Decimal       @db.Decimal(10, 2)
  dueDate       DateTime      @map("due_date")
  paidDate      DateTime?     @map("paid_date")
  status        InvoiceStatus @default(PENDING)
  description   String?
  notes         String?
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  deletedAt     DateTime?     @map("deleted_at")

  createdByUserId String? @map("created_by_user_id") @db.Uuid
  updatedByUserId String? @map("updated_by_user_id") @db.Uuid

  client       Client        @relation(fields: [clientId], references: [id], onDelete: Restrict)
  rental       Rental?       @relation(fields: [rentalId], references: [id], onDelete: SetNull)
  createdBy    User?         @relation("InvoiceCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)
  updatedBy    User?         @relation("InvoiceUpdatedBy", fields: [updatedByUserId], references: [id], onDelete: SetNull)
  transactions Transaction[]

  @@index([invoiceNumber])
  @@index([clientId])
  @@index([rentalId])
  @@index([status])
  @@index([dueDate])
  @@index([deletedAt])
  @@index([createdByUserId])
  @@index([updatedByUserId])
  @@map("invoices")
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

model Transaction {
  id            String            @id @default(uuid()) @db.Uuid
  invoiceId     String?           @map("invoice_id") @db.Uuid
  type          TransactionType
  category      String
  amount        Decimal           @db.Decimal(10, 2)
  date          DateTime          @default(now())
  paymentMethod PaymentMethod     @map("payment_method")
  description   String
  reference     String?
  status        TransactionStatus @default(COMPLETED)
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  invoice Invoice? @relation(fields: [invoiceId], references: [id], onDelete: SetNull)

  @@index([invoiceId])
  @@index([type])
  @@index([date])
  @@index([status])
  @@map("transactions")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  PIX
  BANK_TRANSFER
  CHECK
}

enum TransactionStatus {
  PENDING
  COMPLETED
  CANCELLED
  REFUNDED
}

// ============================================
// SYSTEM SETTINGS
// ============================================

model Setting {
  id        String   @id @default(uuid()) @db.Uuid
  key       String   @unique
  value     String
  type      String   @default("string")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}
